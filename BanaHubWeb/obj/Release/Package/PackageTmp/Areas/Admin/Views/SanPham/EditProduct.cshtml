@model BanaHubWeb.Models.LOAI

@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_BanaHubAdminLayout.cshtml";
}

<div id="layoutSidenav_content">
    <div class="container-fluid container-center" style="margin-top: 2rem;">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="sub-container">
                    <h2 class="text-center">Sửa thông tin loại sản phẩm</h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaLoai)

                            <div class="form-group">
                                <div class="row">
                                    <label class="control-label col-md-2">Mã loại</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" name="iMaLoai" value="@Model.MaLoai" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style="margin-top:1rem">
                                <div class="row">
                                    <label class="control-label col-md-2">Tên loại sản phẩm</label>
                                    <div class="col-md-10">
                                        <input class="form-control" type="text" name="sTenLoai" value="@Model.TenLoai" required />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style="margin-top:1rem">
                                <div class="d-flex justify-content-center">
                                    <input style="padding: .5rem 3rem" type="submit" size="70" value="Lưu thông tin" class="btn btn-outline-danger" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

